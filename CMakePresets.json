{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default (x64)",
      "generator": "Ninja",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "x86",
      "displayName": "x86",
      "generator": "Ninja",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "binaryDir": "${sourceDir}/build-x86",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "VCPKG_TARGET_TRIPLET": "x86-windows"
      }
    },
    {
      "name": "arm64",
      "displayName": "ARM64",
      "generator": "Ninja",
      "architecture": {
        "value": "arm64",
        "strategy": "external"
      },
      "binaryDir": "${sourceDir}/build-arm64",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "VCPKG_TARGET_TRIPLET": "arm64-windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "x86",
      "configurePreset": "x86"
    },
    {
      "name": "arm64",
      "configurePreset": "arm64"
    }
  ]
}
